
<button class="btn btn-lg btn-primary mb-4">
    <i class="fa fa-compress" aria-hidden="true">&nbsp;</i>
    <span class="btn-label">{{# _t }}Opimize{{/ _t }}</span>
</button>

<div class="row mb-4">
    <div class="col-6">
        <section class="card card-table">
            <header class="card-header">
                <h3 class="card-title mb-0">{{# _t }}Api information{{/ _t }}</h3>
            </header>
            <!--<div class="card-body">-->
            {{# tinifyData }}
                <table class="table table-contourless">
                    <tbody>
                        <tr>
                            <th scope="row">{{# _t }}Key{{/ _t }}</th>
                            <td>{{ key }}</td>
                        </tr>
                        <tr>
                            <th scope="row">{{# _t }}Compressions Count{{/ _t }}</th>
                            <td>{{ compressions_count }}</td>
                        </tr>
                        <tr>
                            <th scope="row">{{# _t }}Max Compressions{{/ _t }}</th>
                            <td>{{ max_compressions }}</td>
                        </tr>
                        <tr>
                            <th scope="row">{{# _t }}Total Size{{/ _t }}</th>
                            <td>{{ total_size }}</td>
                        </tr>
                    </tbody>
                </table>
            {{/ tinifyData }}
            <!--</div>-->
            <footer class="card-footer">
                <button class="btn btn-lg btn-primary">
                    <i class="fa fa-compress" aria-hidden="true">&nbsp;</i>
                    <span class="btn-label">{{# _t }}Opimize{{/ _t }}</span>
                </button>
            </footer>
        </section>
    </div>

    <div class="col-6">
        <section class="card card-table">
            <header class="card-header">
                <h3 class="card-title mb-0">{{# _t }}Api information{{/ _t }}</h3>
            </header>
            <table class="table" data-toggle="table" data-search="false" data-pagination="false" data-page-list="10,25,50,100,All" data-page-size="25">
                <thead>
                <tr>
                    <th scope="col">{{# _t }}Key{{/ _t }}</th>
                    <th scope="col">{{# _t }}Compressions Count{{/ _t }}</th>
                    <th scope="col">{{# _t }}Max Compressions{{/ _t }}</th>
                </tr>
                </thead>
                <tbody>
                {{# tinifyData }}
                    <tr>
                        <td><strong>{{ key }}</strong></td>
                        <td>{{ compressions_count }}</td>
                        <td>{{ max_compressions }}</td>
                    </tr>
                {{/ tinifyData }}
                </tbody>
            </table>
        </section>
    </div>
</div>
